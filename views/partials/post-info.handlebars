<article class="post">
    <div class="title">
        <h2><a href="/post/{{id}}">{{title}}</a></h2>
    </div>
    <div class="meta">
        <p>{{post_body}}</p>
        {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>